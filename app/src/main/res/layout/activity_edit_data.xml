<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"
    android:orientation="vertical"
    android:paddingTop="1dp" >

    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/namaTempatMakan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ff29aec1"
        android:text="Data Offline Tempat Wifi"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/txtEditAlamat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp">

            <requestFocus />
        </EditText>


        <EditText
            android:id="@+id/txtEditAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignRight="@+id/btnDelete"
            android:layout_alignEnd="@+id/btnDelete" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/keterangan"
            android:layout_weight="0.14"
            />


        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="removeKampus"
            android:text="Simpan"
            android:background="#ff29aec1"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="Delete"
            android:background="#ff29aec1"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>

</LinearLayout>